</head>
<body>
    <%- include('./layout/nav.ejs')  %> 
    <div class="auth">
        
        <form class="form" action="/login" method="post">
            <% if(message){ %> 
                <center><div class="alert" role="alert">
                <%= message %>
              </div></center>
              <% } %> 
            <div class="input-field">
                <label><b>Email Id </b></label><span><red>*</red></span><br>
                <input type="text" name="email" />
            </div>
            <div class="input-field">
                <label><b>Password </b></label><span><red>*</red></span><br>
                <input type="password" name="password"/>
            </div>
            <div class="input-field">
                <center><input type="submit" value="Login"/></center>
            </div>
        </form>
    </div>
